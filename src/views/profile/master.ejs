<script>
  function confirmChanged(nameImg, type) {
    setTimeout(function () {
      let title = type == 'avatar' ? 'avatar' : 'cover image';
      alertify.confirm(
        'Confirm that your avatar is changed.',
        `Are you sure to change your ${title}?`,
        function () {
          var userId = JSON.parse('<%- JSON.stringify(user._id) %>');
          data = {
            userId: userId,
            nameImg: nameImg,
            type: type,
          };
          $.ajax({
            url: '/change-photo',
            type: 'PUT',
            data: data,
            success: function (res) {
              alertify.success(res);
              $('#user-info-avatar').attr('src', 'images/User/' + nameImg);
            },
            error: function (err) {
              alertify.warning(err);
            },
          });
        },
        function () {
          cancelUploadImage(type);
          alertify.warning(`Cancel changing ${type} photo.`);
        }
      );
    }, 1000);
  }
</script>
