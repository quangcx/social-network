<script>
  function changePicture(input) {
    $(input).click();
  }
  function readURL(input, img, type) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $(img).attr('src', e.target.result);
      };
      reader.readAsDataURL(input.files[0]);
      confirmChanged(input.files[0].name, type);
    }
  }
  function cancelUploadImage(type) {
    if (type == 'avatar') {
      $('#avatar-img').attr('src', 'images/User/<%= user.avatar %>');
    } else if (type == 'coverImg') {
      $('#cover-img').attr('src', 'images/User/<%= user.coverImg %>');
    } else return;
  }
</script>
