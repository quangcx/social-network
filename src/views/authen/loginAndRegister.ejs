  <body class="sign-in">
    <div class="wrapper">
      <div class="sign-in-page">
        <div class="signin-popup">
          <div class="signin-pop">
            <div class="row">
              <div class="col-lg-6">
                <div class="cmp-info">
                  <div class="cm-logo">
                    <img src="images/cm-logo.png" alt="" />
                    <p>
                      Workwise, is a global social networking where people
                      connect to their friends. Keep in touch and have fun
                      together.
                    </p>
                  </div>
                  <!--cm-logo end-->
                  <img src="images/cm-main-img.png" alt="" />
                </div>
                <!--cmp-info end-->
              </div>
              <div class="col-lg-6">
                <div class="login-sec">
                  <ul class="sign-control">
                    <li id="sign-in" data-tab="tab-1" class="current">
                      <a href="#" title="">Sign in</a>
                    </li>
                    <li id="sign-up" data-tab="tab-2">
                      <a href="#" title="">Sign up</a>
                    </li>
                  </ul>
                  <div class="sign_in_sec current" id="tab-1">
                    <h3>Sign in</h3>
                    <form method="POST" action="/login">
                      <div class="row">
                        <div class="col-lg-12 no-pdd">
                          <div class="sn-field">
                            <input
                              type="email"
                              name="email"
                              placeholder="Email"
                            />
                            <i class="la la-envelope"></i>
                          </div>
                          <!--sn-field end-->
                        </div>
                        <div class="col-lg-12 no-pdd">
                          <div class="sn-field">
                            <input
                              type="password"
                              name="password"
                              placeholder="Password"
                            />
                            <i class="la la-lock"></i>
                          </div>
                        </div>
                        <div class="col-lg-12 no-pdd">
                          <div class="checky-sec">
                            <div class="fgt-sec">
                              <input type="checkbox" name="cc" id="c1" />
                              <label for="c1">
                                <span></span>
                              </label>
                              <small>Remember me</small>
                            </div>
                            <!--fgt-sec end-->
                            <a href="#" title="">Forgot Password?</a>
                          </div>
                        </div>
                        <div
                          class="col-lg-12 no-pdd"
                          style="
                            display: flex;
                            justify-content: center;
                            align-items: center;
                          "
                        >
                          <button type="submit" value="submit">Sign in</button>
                        </div>
                      </div>
                    </form>
                    <div class="login-resources">
                      <h4>Login Via Social Account</h4>
                      <ul>
                        <li>
                          <a href="#" title="" class="fb"
                            ><i class="fa fa-facebook"></i>Login Via Facebook</a
                          >
                        </li>
                        <li>
                          <a href="#" title="" class="tw"
                            ><i class="fa fa-twitter"></i>Login Via Twitter</a
                          >
                        </li>
                      </ul>
                    </div>
                    <!--login-resources end-->
                  </div>
                  <!--sign_in_sec end-->
                  <div class="sign_in_sec" id="tab-2">
                    <div class="signup-tab">
                      <i class="fa fa-long-arrow-left"></i>
                      <h2>abc@example.com</h2>
                      <ul>
                        <li data-tab="tab-3" class="current">
                          <a href="#" title="">User</a>
                        </li>
                        <li data-tab="tab-4">
                          <a href="#" title="">Company</a>
                        </li>
                      </ul>
                    </div>
                    <!--signup-tab end-->
                    <div class="dff-tab current" id="tab-3">
                      <form method="POST" action="/register">
                        <div class="row">
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="text"
                                name="name"
                                placeholder="Full Name"
                              />
                              <i class="la la-user"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="email"
                                name="email"
                                placeholder="Email"
                              />
                              <i class="la la-globe"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="text"
                                name="gender"
                                placeholder="Gender"
                              />
                              <i class="la la-male"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="password"
                                name="password"
                                placeholder="Password"
                              />
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="password"
                                name="repeat-password"
                                placeholder="Repeat Password"
                              />
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="checky-sec st2">
                              <div class="fgt-sec">
                                <input type="checkbox" name="cc" id="c2" />
                                <label for="c2">
                                  <span></span>
                                </label>
                                <small
                                  >Yes, I understand and agree to the workwise
                                  Terms & Conditions.</small
                                >
                              </div>
                              <!--fgt-sec end-->
                            </div>
                          </div>
                          <div
                            class="col-lg-12 no-pdd"
                            style="
                              display: flex;
                              justify-content: center;
                              align-items: center;
                            "
                          >
                            <button type="submit" value="submit">
                              Get Started
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <!--dff-tab end-->
                    <div class="dff-tab" id="tab-4">
                      <form method="POST" action="/register">
                        <div class="row">
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="text"
                                name="company-name"
                                placeholder="Company Name"
                              />
                              <i class="la la-building"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="email"
                                name="email"
                                placeholder="Email"
                              />
                              <i class="la la-globe"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="password"
                                name="password"
                                placeholder="Password"
                              />
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="sn-field">
                              <input
                                type="password"
                                name="repeat-password"
                                placeholder="Repeat Password"
                              />
                              <i class="la la-lock"></i>
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <div class="checky-sec st2">
                              <div class="fgt-sec">
                                <input type="checkbox" name="cc" id="c3" />
                                <label for="c3">
                                  <span></span>
                                </label>
                                <small
                                  >Yes, I understand and agree to the workwise
                                  Terms & Conditions.</small
                                >
                              </div>
                              <!--fgt-sec end-->
                            </div>
                          </div>
                          <div class="col-lg-12 no-pdd">
                            <button type="submit" value="submit">
                              Get Started
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <!--dff-tab end-->
                  </div>
                </div>
                <!--login-sec end-->
              </div>
            </div>
          </div>
          <!--signin-pop end-->
        </div>
        <!--signin-popup end-->
        <div class="footy-sec">
          <div class="container">
            <ul>
              <li><a href="#" title="">Help Center</a></li>
              <li><a href="#" title="">Privacy Policy</a></li>
              <li><a href="#" title="">Community Guidelines</a></li>
              <li><a href="#" title="">Cookies Policy</a></li>
              <li><a href="#" title="">Career</a></li>
              <li><a href="#" title="">Forum</a></li>
              <li><a href="#" title="">Language</a></li>
              <li><a href="#" title="">Copyright Policy</a></li>
            </ul>
            <p><img src="images/copy-icon.png" alt="" />Copyright 2018</p>
          </div>
        </div>
        <!--footy-sec end-->
      </div>
      <!--sign-in-page end-->
    </div>
    <!--theme-layout end-->

    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script type="text/javascript" src="js/popper.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="lib/slick/slick.min.js"></script>
    <!-- Socket IO -->
    <script type="text/javascript" src="socket.io/socket.io.js"></script>

    <script type="text/javascript" src="alertifyjs/alertify.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
    <script>
      function getErrorNotification(errorArr) {
        errorArr.forEach((error) => {
          alertify.warning(error);
        });
      }
      function getSuccessNotification(successArr) {
        successArr.forEach((success) => {
          alertify.success(success);
        });
      }
      function parseDataEjs2Js(str) {
        return JSON.parse(str);
      }
      function errorToRegister() {
        var tab_id = $('#sign-up').attr('data-tab');
        $('.sign-control li').removeClass('current');
        $('.sign_in_sec').removeClass('current');
        $('#sign-up').addClass('current animated fadeIn');
        $('#' + tab_id).addClass('current animated fadeIn');
      }
    </script>

    <% if(errors != "") { %>
    <script>
      if (parseDataEjs2Js('<%- JSON.stringify(status) %>')[0] == 'register') {
        errorToRegister();
      }
      getErrorNotification(parseDataEjs2Js('<%- JSON.stringify(errors) %>'));
    </script>
    <% } %>
    <!-- ------------------- -->
    <% if(success != "") { %>
    <script>
      getSuccessNotification(parseDataEjs2Js('<%- JSON.stringify(success) %>'));
    </script>
    <% } %>
  </body>
</html>
