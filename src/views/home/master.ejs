<!-- ------------ Get time user used ---------------- -->
<script>
  function showTime(oldTime) {
    oldTime = new Date(+oldTime);
    let newTime = new Date();
    let deltaHours = newTime.getHours() - oldTime.getHours();
    let deltaMinutes = newTime.getMinutes() - oldTime.getMinutes();
    let deltaTime =
      (deltaHours < 10 ? '0' + deltaHours : deltaHours) +
      ':' +
      (deltaMinutes < 10 ? '0' + deltaMinutes : deltaMinutes);
    return deltaTime;
  }
  const oldTime = '<%- user.timeUserLogin %>';
  setInterval(function () {
    document.getElementById('show-time').innerHTML = showTime(oldTime);
  }, 1000);
</script>

<!-- ------------------ Get image to change -------------------- -->
<script>
  function changePicture() {
    $('#upload-image').click();
  }
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $('#new-post-image').attr('src', e.target.result);
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  function cancelUploadImage() {
    $('#new-post-image').attr('src', '');
    $('#upload-image').val('');
  }
</script>
